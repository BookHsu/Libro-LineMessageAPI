{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Example API (net10)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-example-api",
      "program": "${workspaceFolder}/examples/LineMessageApi.ExampleApi/bin/Debug/net10.0/LineMessageApi.ExampleApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/examples/LineMessageApi.ExampleApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "internalConsole"
    }
  ]
}
